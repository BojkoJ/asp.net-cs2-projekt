<Window x:Class="BOJ0043_App.Views.CoworkingSpaceEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BOJ0043_App.Views"
        mc:Ignorable="d"
        Title="Úprava coworkingového prostoru" Height="700" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                   Text="{Binding WindowTitle}" 
                   FontSize="22" FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Název:" FontWeight="Bold" Margin="0,0,0,10"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CoworkingSpace.Name}" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Adresa:" FontWeight="Bold" Margin="0,0,0,10"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CoworkingSpace.Address}" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Popis:" FontWeight="Bold" VerticalAlignment="Top" Margin="0,0,0,10"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding CoworkingSpace.Description}" 
                 TextWrapping="Wrap" AcceptsReturn="True" 
                 VerticalAlignment="Stretch" VerticalScrollBarVisibility="Auto" 
                 Margin="0,0,0,10" Height="80"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Zeměpisná šířka (GPS):" FontWeight="Bold" Margin="0,0,0,10"/>
        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Vertical" Margin="0,0,0,10">
            <TextBox Text="{Binding CoworkingSpace.Latitude}" />
            <TextBlock Text="Zadejte hodnotu jako 50.085369423302176 (s desetinnou tečkou)" FontSize="10" Foreground="Gray"/>
        </StackPanel>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Zeměpisná délka (GPS):" FontWeight="Bold" Margin="0,0,0,10"/>
        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Vertical" Margin="0,0,0,10">
            <TextBox Text="{Binding CoworkingSpace.Longitude}" />
            <TextBlock Text="Zadejte hodnotu jako 14.426374485023674 (s desetinnou tečkou)" FontSize="10" Foreground="Gray"/>
        </StackPanel>

        <TextBlock Grid.Row="6" Grid.Column="0" Text="Telefon:" FontWeight="Bold" Margin="0,0,0,10"/>
        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding CoworkingSpace.PhoneNumber}" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="7" Grid.Column="0" Text="Email:" FontWeight="Bold" Margin="0,0,0,10"/>
        <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding CoworkingSpace.Email}" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="8" Grid.Column="0" Text="Web:" FontWeight="Bold" Margin="0,0,0,10"/>
        <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding CoworkingSpace.Website}" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Uložit" Command="{Binding SaveCommand}" Width="100" Margin="0,10,10,0"/>
            <Button Content="Zrušit" Click="CancelButton_Click" Width="100" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="BOJ0043_App.Views.ReservationCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vytvořit rezervaci"
        Height="500"
        Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Vytvořit rezervaci"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>
        <StackPanel Grid.Row="1"
                    Margin="0,0,0,10">
            <TextBlock Text="Pracovní místo:"
                       FontWeight="Bold"/>
            <ComboBox ItemsSource="{Binding Workspaces}"
                      SelectedItem="{Binding SelectedWorkspace, Mode=TwoWay}"
                      DisplayMemberPath="Name"
                      Margin="0,0,0,10"/>
            <TextBlock Text="Email zákazníka:"
                       FontWeight="Bold"/>
            <TextBox Text="{Binding CustomerEmail, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,10"/>
            <TextBlock Text="Jméno zákazníka:"
                       FontWeight="Bold"/>
            <TextBox Text="{Binding CustomerName, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,10"/>
            <TextBlock Text="Začátek rezervace:"
                       FontWeight="Bold"/>
            <DatePicker SelectedDate="{Binding StartDate, Mode=TwoWay}"
                        Margin="0,0,0,5"/>
            <TextBox Text="{Binding StartTime, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,10"
                     ToolTip="HH:mm"/>
            <TextBlock Text="Konec rezervace:"
                       FontWeight="Bold"/>
            <DatePicker SelectedDate="{Binding EndDate, Mode=TwoWay}"
                        Margin="0,0,0,5"/>
            <TextBox Text="{Binding EndTime, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,10"
                     ToolTip="HH:mm"/>
            <TextBlock Text="Poznámka:"
                       FontWeight="Bold"/>
            <TextBox Text="{Binding Note, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,10"/>
        </StackPanel>
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Vytvořit"
                    Width="100"
                    Margin="0,0,10,0"
                    Click="CreateButton_Click"/>
            <Button Content="Zrušit"
                    Width="100"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

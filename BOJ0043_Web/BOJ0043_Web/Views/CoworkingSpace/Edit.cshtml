@model BOJ0043_Web.Models.CoworkingSpace

@{
    ViewData["Title"] = "Upravit coworkingový prostor";
}

<h1>Upravit coworkingový prostor</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Úprava údajů o coworkingovém prostoru</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Název</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address" class="form-label">Adresa</label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Popis</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Latitude" class="form-label">Zeměpisná šířka (GPS)</label>
                            <input asp-for="Latitude" class="form-control" type="text" />
                            <small class="form-text text-muted">Zadejte hodnotu jako 50.085369423302176 (s desetinnou tečkou)</small>
                            <span asp-validation-for="Latitude" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Longitude" class="form-label">Zeměpisná délka (GPS)</label>
                            <input asp-for="Longitude" class="form-control" type="text" />
                            <small class="form-text text-muted">Zadejte hodnotu jako 14.426374485023674 (s desetinnou tečkou)</small>
                            <span asp-validation-for="Longitude" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label asp-for="PhoneNumber" class="form-label">Telefon</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Website" class="form-label">Web</label>
                            <input asp-for="Website" class="form-control" type="url" />
                            <span asp-validation-for="Website" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">Uložit změny</button>
                        <a asp-action="Index" class="btn btn-secondary">Zpět na seznam</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
